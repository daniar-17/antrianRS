<div class="text-center">
    <div class="p-3 mb-2 bg-secondary text-white">
        <h1 class="display-4">Pilih Layanan</h1>
    </div>
    <form method="get" action="/layanan" style="align-content: center">
        <input type="hidden" id="data_layanan" name="data_layanan" value="checkLayanan" />
        <div class="row">
            <div class="col-6">
                <div class="card bg-gradient-primary">
                    <div class="card-header">
                        <h3 class="card-title text-center">Pagi</h3>
                    </div>
                    <div class="card-body text-center">
                        <h3>Pukul 01:00 - 12:59</h3>
                        <button class="btn btn-lg btn-light" type="submit" value="Pagi" name="type_layanan">Pilih Pagi</button>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card bg-gradient-success">
                    <div class="card-header">
                        <h3 class="card-title text-center">Sore</h3>
                    </div>
                    <div class="card-body text-center">
                        <h3>Pukul 13:00 - 23:59</h3>
                        <button class="btn btn-lg btn-light" type="submit" value="Sore" name="type_layanan">Pilih Sore</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
